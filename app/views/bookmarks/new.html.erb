<div class="row">
  <div class="col-6 m-auto mt-3">
    <div class="bg-light p-3">
      <h1>New Bookmark</h1>
      <div class="mt-3">
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id, include_blank: 'Select a movie' %>
          <%= f.button :submit, class: "btn btn-primary", style: "color: white;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
